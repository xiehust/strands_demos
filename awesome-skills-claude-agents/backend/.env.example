# Application Settings
APP_NAME="Agent Platform API"
APP_VERSION="4.0.0"
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# DynamoDB (tables will be auto-created on first startup)
DYNAMODB_AGENTS_TABLE=awesome_skills_platform_agents
DYNAMODB_SKILLS_TABLE=awesome_skills_platform_skills
DYNAMODB_MCP_TABLE=awesome_skills_platform_mcp_servers
DYNAMODB_SESSIONS_TABLE=awesome_skills_platform_sessions
DYNAMODB_MESSAGES_TABLE=awesome_skills_platform_messages

# S3 (bucket name will auto-append AWS account ID on first startup)
S3_BUCKET=awesome-skills-platform

# Claude Agent SDK / Anthropic API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Custom Anthropic API base URL
# Use this for custom endpoints or proxies
# Leave empty to use default Anthropic API endpoint
ANTHROPIC_BASE_URL=

# Claude Model Configuration
DEFAULT_MODEL=claude-sonnet-4-5-20250929

# Claude Code Configuration
# Set to true to use AWS Bedrock instead of Anthropic API
CLAUDE_CODE_USE_BEDROCK=true

# Set to true to disable experimental beta features in Claude Code
CLAUDE_CODE_DISABLE_EXPERIMENTAL_BETAS=false

# Agent Workspace Directory
# This is the default working directory for agents
# Can be overwritten per-agent in the agent configuration
# Leave empty to use default (./workspace relative to project root)
# AGENT_WORKSPACE_DIR=/path/to/your/workspace
